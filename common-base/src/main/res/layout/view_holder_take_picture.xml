<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cc"
    android:orientation="vertical"
    app:divider="@drawable/divider_line"
    app:showDividers="beginning|middle">

    <Button
        android:id="@+id/take_picture_from_file"
        style="@style/RemoveButtonShadow"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="从相册选择"
        android:textAllCaps="false"
        android:textColor="@color/color_33"
        android:textSize="20sp" />

    <Button
        android:id="@+id/take_picture_from_camera"
        style="@style/RemoveButtonShadow"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="照相"
        android:textAllCaps="false"
        android:textColor="@color/color_33"
        android:textSize="20sp" />

    <Button
        android:id="@+id/take_picture_cancel"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/common_cancel"
        android:textAllCaps="false"
        android:textColor="@color/color_33"
        android:textSize="20sp" />
</androidx.appcompat.widget.LinearLayoutCompat>